<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.beatboxchad.android.selfcaredashboard.ListItemGoal"/>
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <Button
            android:id="@+id/polarity_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="@{() -> viewModel.editGoal()}"
            android:padding="@dimen/list_item_padding"
            android:text="Edit"/>

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/polarity_check_box"
            android:padding="@dimen/list_item_padding"
            android:text="@{viewModel.title}"
            android:backgroundColor="@{viewModel.color}"
            android:textStyle="bold"/>
    </RelativeLayout>
</layout>
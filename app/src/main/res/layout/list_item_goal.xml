<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.beatboxchad.android.selfcaredashboard.GoalViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="64dp"
                                                 android:id="@+id/relativeLayout">
        <Button
            android:id="@+id/edit_goal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClickListener="@{() -> viewModel.editGoal()}"
            android:theme="@style/AppTheme"
            android:padding="@dimen/list_item_padding"
            android:text="Edit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/list_item_padding"
            android:layout_margin="@dimen/list_item_padding"
            android:text="@{viewModel.title}"
            android:backgroundColor="@{viewModel.color}"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/edit_goal_button"/>
    </android.support.constraint.ConstraintLayout>
</layout>